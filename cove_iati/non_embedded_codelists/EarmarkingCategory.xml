<codelist name="EarmarkingCategory" xml:lang="en" complete="1" embedded="0">
    <metadata>
        <name>
            <narrative>EarmarkingCategory</narrative>
        </name>
        <description>
            <narrative>This codelist has been created by IATI and is derived from the Grand Bargain Earmarking Modality codelist.</narrative>
        </description>
    </metadata>
    <codelist-items>
        <codelist-item>
            <code>1</code>
            <name>
                <narrative>Unearmarked</narrative>
            </name>
            <description>
                <narrative>Any or all of the Earmarking Modality codes A,B or C.</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>2</code>
            <name>
                <narrative>Softly Earmarked</narrative>
            </name>
            <description>
                <narrative>Any or all of the Earmarking Modality codes D,E or F.</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>3</code>
            <name>
                <narrative>Earmarked</narrative>
            </name>
            <description>
                <narrative>Any or all of the Earmarking Modality codes G or H.</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>4</code>
            <name>
                <narrative>Tightly Earmarked</narrative>
            </name>
            <description>
                <narrative>Any or all of the Earmarking Modality codes I,J or K.</narrative>
            </description>
        </codelist-item> 
    </codelist-items>
</codelist>
