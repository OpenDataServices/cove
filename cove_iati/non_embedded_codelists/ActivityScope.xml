<codelist name="ActivityScope" xml:lang="en" complete="1" embedded="0">
    <metadata>
        <name>
            <narrative>Activity Scope</narrative>
        </name>
        <description>
            <narrative>Geographic scope of activity</narrative>
        </description>
    </metadata>
    <codelist-items>
        <codelist-item>
            <code>1</code>
            <name>
                <narrative>Global</narrative>
                <narrative xml:lang="fr">Mondial</narrative>
            </name>
            <description>
                <narrative>The activity scope is global</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>2</code>
            <name>
                <narrative>Regional</narrative>
                <narrative xml:lang="fr">Régional</narrative>
            </name>
            <description>
                <narrative>The activity scope is a supranational region</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>3</code>
            <name>
                <narrative>Multi-national</narrative>
                <narrative xml:lang="fr">Multinational</narrative>
            </name>
            <description>
                <narrative>The activity scope covers multiple countries, that don't constitute a region</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>4</code>
            <name>
                <narrative>National</narrative>
                <narrative xml:lang="fr">National</narrative>
            </name>
            <description>
                <narrative>The activity scope covers one country</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>5</code>
            <name>
                <narrative>Sub-national: Multi-first-level administrative areas</narrative>
                <narrative xml:lang="fr">Infranational : multiples régions administratives de premier niveau</narrative>
            </name>
            <description>
                <narrative>The activity scope covers more than one first-level subnational administrative areas (e.g. counties, provinces, states)</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>6</code>
            <name>
                <narrative>Sub-national: Single first-level administrative area</narrative>
                <narrative xml:lang="fr">Infranational : Région administrative unique de premier niveau</narrative>
            </name>
            <description>
                <narrative>The activity scope covers one first-level subnational administrative area (e.g. country, province, state)</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>7</code>
            <name>
                <narrative>Sub-national: Single second-level administrative area</narrative>
                <narrative xml:lang="fr">Infranational : Région administrative unique de deuxième niveau</narrative>
            </name>
            <description>
                <narrative>The activity scope covers one second-level subnational administrative area (e.g. municipality or district)</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>8</code>
            <name>
                <narrative>Single location</narrative>
                <narrative xml:lang="fr">Un seul emplacement</narrative>
            </name>
            <description>
                <narrative>The activity scope covers one single location (e.g. town, village, farm)</narrative>
            </description>
        </codelist-item>
    </codelist-items>
</codelist>
