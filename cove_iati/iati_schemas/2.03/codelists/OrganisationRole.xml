<codelist name="OrganisationRole" xml:lang="en" complete="1">
    <metadata>
        <name>
            <narrative>Organisation Role</narrative>
        </name>
        <description>
            <narrative>IATI codes for the role of an organisation within an activity. An organisation can play more than one role within an activity.</narrative>
        </description>
    </metadata>
    <codelist-items>
        <codelist-item>
            <code>1</code>
            <name>
                <narrative>Funding</narrative>
                <narrative xml:lang="fr">Financement</narrative>
            </name>
            <description>
                <narrative>The government or organisation which provides funds to the activity. </narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>2</code>
            <name>
                <narrative>Accountable</narrative>
                <narrative xml:lang="fr">Responsabilité</narrative>
            </name>
            <description>
                <narrative>An organisation responsible for oversight of the activity and its outcomes</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>3</code>
            <name>
                <narrative>Extending</narrative>
                <narrative xml:lang="fr">Octroi</narrative>
            </name>
            <description>
                <narrative>An organisation that manages the budget and direction of an activity on behalf of the funding organisation</narrative>
            </description>
        </codelist-item>
        <codelist-item>
            <code>4</code>
            <name>
                <narrative>Implementing</narrative>
                <narrative xml:lang="fr">Mise en œuvre</narrative>
            </name>
            <description>
                <narrative>The organisation that physically carries out the activity or intervention. </narrative>
            </description>
        </codelist-item>
    </codelist-items>
</codelist>
